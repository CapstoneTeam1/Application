<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/host"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFDAB9" />
        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFE4C4" >
            <ImageButton
                android:id="@+id/tab_content1"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="100dp"
                android:layout_marginLeft="65dp"
                android:layout_marginRight="66dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#FFE4C4"
                android:src="@drawable/button_icon1"
                android:scaleType="fitCenter" />
            <GridLayout
                android:id="@+id/tab_content2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:rowCount="3"
                android:columnCount="2">
                <ImageButton
                    android:id="@+id/sound0"
                    android:src="@drawable/sound0_icon"
                    android:layout_width="170dp"
                    android:layout_height="155dp"
                    android:layout_gravity="center"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:scaleType="fitCenter"/>
                <ImageButton
                    android:id="@+id/sound1"
                    android:src="@drawable/sound1_icon"
                    android:layout_width="170dp"
                    android:layout_height="155dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageButton
                    android:id="@+id/sound2"
                    android:src="@drawable/sound2_icon"
                    android:layout_width="170dp"
                    android:layout_height="155dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageButton
                    android:id="@+id/sound3"
                    android:src="@drawable/sound3_icon"
                    android:layout_width="170dp"
                    android:layout_height="155dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageButton
                    android:id="@+id/sound4"
                    android:src="@drawable/sound4_icon"
                    android:layout_width="170dp"
                    android:layout_height="155dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
                <ImageButton
                    android:id="@+id/sound5"
                    android:src="@drawable/sound5_icon"
                    android:layout_width="170dp"
                    android:layout_height="155dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"/>
            </GridLayout>

            <TextView
                android:id="@+id/tab_content3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="made by SCHP\nSound Classification for Hearing-impaired Person"
                android:textSize="30dp" />

        </FrameLayout>
    </LinearLayout>
</TabHost>